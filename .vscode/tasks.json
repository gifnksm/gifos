{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rust: cargo xbuild",
            "type": "shell",
            "command": "cargo xbuild",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Rust: cargo xrun",
            "type": "shell",
            "command": "cargo xrun",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "Rust: cargo xtest",
            "type": "shell",
            "command": "cargo xtest",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        }
    ]
}
